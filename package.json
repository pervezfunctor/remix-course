{
  "name": "remix-course",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "deploy": "fly deploy --remote-only",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint": "eslint --max-warnings=0 --fix --cache --ext .ts,.tsx app",
    "test:dev": "vitest",
    "test": "vitest run --passWithNoTests",
    "cov": "vitest run --coverage",
    "cov:dev": "vitest watch --coverage",
    "types": "tsc --noEmit -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "cd": "turbo types lint test",
    "fmt": "pnpm prettier --write --ignore-unknown app",
    "prepare": "husky install",
    "db:types": "pnpm prisma generate",
    "db:push": "pnpm prisma db push",
    "db:seed": "pnpm prisma db seed",
    "db": "pnpm db:types && pnpm db:push && pnpm db:seed",
    "db:reset": "pnpm prisma db push --force-reset",
    "db!": "pnpm db:reset && pnpm db",
    "db:sql": "dotenv -e .env.development pnpm prisma migrate dev --create-only",
    "db:studio": "dotenv -e .env.development pnpm prisma studio",
    "db:repl": "dotenv -e .env.development pnpm prisma-repl"
  },
  "dependencies": {
    "@prisma/client": "4.12.0",
    "@remix-run/node": "1.14.3",
    "@remix-run/react": "1.14.3",
    "@remix-run/serve": "1.14.3",
    "daisyui": "^2.51.5",
    "dayjs": "1.11.7",
    "immer": "9.0.21",
    "isbot": "3.6.7",
    "pino": "8.11.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "1.12.2",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.5.0",
    "use-immer": "0.8.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@remix-run/dev": "1.14.3",
    "@remix-run/eslint-config": "1.14.3",
    "@types/node": "18.15.10",
    "@types/react": "18.0.30",
    "@types/react-dom": "18.0.11",
    "@vitest/coverage-c8": "0.29.8",
    "c8": "7.13.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "eslint": "8.36.0",
    "husky": "8.0.3",
    "npm-check-updates": "16.8.0",
    "prettier-plugin-tailwindcss": "0.2.6",
    "prisma": "4.12.0",
    "prisma-repl": "1.4.0",
    "rimraf": "4.4.1",
    "tailwindcss": "3.3.0",
    "tsx": "3.12.6",
    "turbo": "1.8.6",
    "typescript": "4.9.5",
    "vitest": "0.29.8",
    "zx": "7.2.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
