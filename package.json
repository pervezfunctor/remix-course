{
  "name": "remix-course",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "deploy": "fly deploy --remote-only",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint": "eslint --max-warnings=0 --fix --cache --ext .ts,.tsx app",
    "test:dev": "vitest",
    "test": "vitest run --passWithNoTests",
    "cov": "vitest run --coverage",
    "cov:dev": "vitest watch --coverage",
    "types": "tsc --noEmit -p .",
    "fmt": "pnpm prettier --write --ignore-unknown app",
    "types:dev": "tsc --noEmit -p . --watch",
    "ci": "turbo types lint test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/node": "1.14.3",
    "@remix-run/react": "1.14.3",
    "@remix-run/serve": "1.14.3",
    "immer": "9.0.21",
    "isbot": "3.6.7",
    "react-dom": "18.2.0",
    "react": "18.2.0",
    "tiny-invariant": "^1.3.1",
    "tiny-warning": "^1.0.3",
    "tslib": "2.5.0",
    "use-immer": "0.8.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "1.14.3",
    "@remix-run/eslint-config": "1.14.3",
    "@types/node": "^18.15.10",
    "@types/react-dom": "18.0.11",
    "@types/react": "18.0.29",
    "@vitest/coverage-c8": "0.29.7",
    "eslint": "8.36.0",
    "turbo": "1.8.5",
    "typescript": "4.9.5",
    "vitest": "0.29.7",
    "husky": "^8.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "trailingComma": "all",
    "proseWrap": "always",
    "endOfLine": "auto"
  }
}
